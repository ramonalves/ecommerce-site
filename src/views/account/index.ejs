<%- contentFor('body') %>
<section id="account">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-6">
				<h4 class="title upper bold">Registre-se agora</h4>
				<span class="subtitle">Crie sua conta e começe a comprar</span>
				<a href="/account/new" class="btn btn-red-default">Criar</a>
			</div>
			<div class="col-xs-12 col-md-6">
				<h4 class="title upper bold">Login</h4>
				<span class="subtitle">Faça o login e volte a comprar</span>
				<form action="/account/login" method="POST">
					<div class="form-group">
						<label for="email">E-mail</label>
						<input type="email" name="email" class="form-control" placeholder="Digite seu e-mail">
					</div>
					<div class="form-group">
						<label for="password">Senha</label>
						<input type="password" name="password" class="form-control" placeholder="Digite sua senha">
					</div>
					<div class="form-group">
						<a href="#">Esqueceu a senha?</a>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-red-dark-default">Entrar</button>
					</div>
					<input type="hidden" name="next" value="<%= next %>">
				</form>
			</div>
		</div>
	</div>
</section>