<%- contentFor('body') %>
<section id="products">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-lg-12 list_pro">
				<% if (data[0]) { %>
					<h4 class="title upper bold">Produtos</h4>
					<hr/>
					<div class="row">
						<% for (var i = 0; i < data.length; i++) {%>
							<div class="col-xs-12 col-md-4 product_item">
								<div class="preview">
									<img src="<%= data[i].image %>" class="img-responsive center-block"  alt="<%= data[i].name %>">
								</div>
								<div class="info">
									<a href="<%= data[i].url %>" target="_blank"><%= data[i].name %></a>
									<div class="price">
										<strong>R$ <%= data[i].price %></strong>
										<a href="/produtos/<%= data[i].slug %>" class="btn btn-red-default">Detalhes</a>
										<p class="help-block category-link"> 
											<a href="/produtos/categoria/<%= data[i].category.slug %>">
												<%= data[i].category.name %>
											</a>
										</p>
									</div>
								</div>
							</div>	
						<% } %>													
					</div>
				<% } else{ %>  
					<h4 class="title">Nenhum produto encontrado!</h4>
				<% } %>
			</div>
		</div>
	</div>
</section>