<%- contentFor('body') %>
<section id="products">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-lg-12 list_pro">
				<% if (products[0]) { %>
					<h4 class="title upper bold">Categoria <%= products[0].category.name %></h4>
					<hr/>
					<div class="row">
						<% for (var i = 0; i < products.length; i++) {%>
							<div class="col-xs-12 col-md-4 product_item">
								<div class="preview">
									<img src="<%= products[i].image %>" class="img-responsive center-block"  alt="">
								</div>
								<div class="info">
									<a href="#"><%= products[i].name %></a>
									<div class="price">
										<strong>R$ <%= products[i].price %></strong>
										<a href="/produtos/<%= products[i].slug %>" class="btn btn-red-default">Detalhes</a>
									</div>
								</div>
							</div>	
						<% } %>													
					</div>
				<% } else{ %>  
					<h4 class="title">Nenhum produto encontrado pra essa categoria!</h4>
				<% } %>
			</div>
		</div>
	</div>
</section>